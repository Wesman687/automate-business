[flake8]
# Moderate linting configuration
max-line-length = 120
max-complexity = 15

# Ignore specific error codes that are too strict
ignore = 
    # Indentation (handled by formatters)
    E111, E114, E121, E125, E126, E127, E128,
    # Whitespace (handled by formatters)  
    E201, E202, E203, E221, E222, E225, E226, E227, E228,
    # Line length (we set to 120)
    E501,
    # Import formatting
    E401, E402,
    # Function definitions
    E731,
    # Trailing whitespace (handled by formatters)
    W291, W292, W293,
    # Line break rules (too strict)
    W503, W504

# Exclude directories
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    env,
    alembic/versions,
    migrations

# Don't check these for complexity
per-file-ignores =
    __init__.py:F401,F403
    */migrations/*:E501,F401
    */alembic/versions/*:E501,F401
