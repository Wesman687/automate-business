[MASTER]
# Disable overly strict checks but keep useful ones
disable=
    # Documentation (too strict for development)
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    
    # Formatting (handled by formatters)
    line-too-long,
    trailing-whitespace,
    
    # Import order (too finicky)
    wrong-import-order,
    ungrouped-imports,
    
    # Variable naming (too strict)
    invalid-name,
    
    # F-string complaints that are not critical
    f-string-without-interpolation,
    
    # Design patterns (too restrictive for rapid development)
    too-few-public-methods,
    
    # Allow some flexibility in complexity
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    
    # Import location flexibility
    import-outside-toplevel

# Keep these enabled (important checks):
# - syntax-error
# - undefined-variable  
# - unused-import
# - unused-variable (as warning)
# - import-error
# - no-member
# - attribute-defined-outside-init

[FORMAT]
# Allow reasonable line length
max-line-length=120

[SIMILARITIES]
# Don't complain about small similarities
min-similarity-lines=20

[DESIGN]
# Reasonable limits
max-args=8
max-locals=15
max-returns=6
max-branches=12
max-statements=50

[MESSAGES CONTROL]
# Make unused variables warnings instead of errors
# Make convention violations hints instead of warnings
