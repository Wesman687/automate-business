{
  "name": "streamline-tech-solutions",
  "version": "1.0.0",
  "description": "Professional website for Streamline Tech Solutions - AI and automation consulting",
  "private": true,
  "scripts": {
    "dev": "npm run dev --prefix frontend",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:backend": "cd backend && python main.py",
    "dev:full": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build": "npm run build --prefix frontend",
    "start": "npm run start --prefix frontend",
    "install:frontend": "npm install --prefix frontend",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "setup": "npm run install:frontend && npm run install:backend",
    "lint": "npm run lint --prefix frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
